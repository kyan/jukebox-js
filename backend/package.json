{
  "name": "jukebox-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "start:prod": "node dist/index.js",
    "fix": "standard --fix",
    "test": "npm run lint && npm run jest",
    "test:watch": "npm run lint && npm run jest -- --watchAll",
    "test:coverage": "npm run lint && npm run jest -- --watchAll --coverage",
    "test:ci": "npm run lint && npm run jest -- --runInBand --coverage",
    "jest": "jest --forceExit --detectOpenHandles --verbose",
    "lint": "tsc --noEmit && standard"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.17.1",
    "google-auth-library": "^5.3.0",
    "invariant": "^2.2.4",
    "javascript-time-ago": "^2.0.13",
    "lodash": "^4.17.15",
    "mongoose": "^5.5.10",
    "mopidy": "^1.1.0",
    "node-cron": "^2.0.3",
    "socket.io": "^2.2.0",
    "spotify-web-api-node": "^4.0.0",
    "tslog": "^2.2.0",
    "uuid": "^3.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/invariant": "^2.2.33",
    "@types/javascript-time-ago": "^2.0.1",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/lodash": "^4.14.157",
    "@types/mongoose": "^5.5.10",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/node-cron": "^2.0.3",
    "@types/socket.io": "^2.1.8",
    "@types/spotify-web-api-node": "^4.0.1",
    "jest": "^26.0.1",
    "jest-watch-typeahead": "^0.6.0",
    "mockingoose": "2.13.2",
    "standard": "^11.0.1",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.48",
    "typescript": "^3.9.5"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeAll",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "jest",
      "spyOn",
      "jasmine",
      "WebSocket"
    ]
  }
}
