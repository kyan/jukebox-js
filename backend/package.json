{
  "name": "jukebox-backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon src/index.js --exec \"node -r @babel/register\" --inspect=0.0.0.0:9229",
    "build": "rm -rf dist && mkdir -p dist && babel src -s -D -d dist",
    "test": "standard && jest"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.5.10",
    "mopidy": "^1.0.1",
    "morgan": "^1.9.1",
    "node-localstorage": "^1.3.1",
    "socket.io": "^2.2.0",
    "spotify-web-api-node": "^4.0.0",
    "uuid": "^3.3.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "jest": "^24.8.0",
    "lolex": "^2.3.2",
    "mockingoose": "2.4.0",
    "nodemon": "^1.17.5",
    "standard": "^11.0.1"
  },
  "jest": {
    "clearMocks": true,
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/dist/",
      "!src/index.js",
      "!src/app.js",
      "!src/**/constants/*.js",
      "!src/config/*.js"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "jest",
      "spyOn",
      "jasmine",
      "WebSocket"
    ]
  }
}
