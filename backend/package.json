{
  "name": "jukebox-backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon src/index.js --exec \"node -r babel-register\"",
    "build": "rm -rf dist && mkdir -p dist && babel src -s -D -d dist",
    "test": "standard && jest",
    "test-watch": "jest --watch"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.4.0",
    "body-parser": "^1.17.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "memory-cache": "^0.2.0",
    "mopidy": "^0.5.0",
    "morgan": "^1.7.0",
    "ws": "^3.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-jest": "^21.0.2",
    "babel-register": "^6.24.1",
    "jest": "^21.0.2",
    "lolex": "^2.3.2",
    "nodemon": "^1.11.0",
    "shipit-cli": "^3.0.0",
    "shipit-deploy": "^2.5.1",
    "standard": "^11.0.0-beta.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/dist/",
      "!src/index.js",
      "!src/app.js",
      "!src/**/constants/*.js"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "jest",
      "spyOn",
      "jasmine",
      "WebSocket"
    ]
  }
}
