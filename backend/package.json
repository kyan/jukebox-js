{
  "name": "jukebox-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "start:prod": "node dist/index.js",
    "fix": "eslint . --ext .js,.ts --quiet --fix",
    "test": "npm run lint && npm run jest",
    "test:watch": "npm run lint && npm run jest -- --watchAll",
    "test:coverage": "npm run lint && npm run jest -- --watchAll --coverage",
    "test:ci": "npm run lint && npm run jest -- --runInBand --coverage",
    "jest": "jest --forceExit --detectOpenHandles --verbose",
    "lint": "tsc --noEmit && eslint . --ext .ts"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.17.1",
    "google-auth-library": "^5.3.0",
    "invariant": "^2.2.4",
    "javascript-time-ago": "^2.0.13",
    "lodash": "^4.17.15",
    "mongoose": "^5.10.5",
    "mopidy": "^1.3.0",
    "node-cron": "^2.0.3",
    "socket.io": "^2.3.0",
    "spotify-web-api-node": "^4.0.0",
    "tslog": "^2.2.0",
    "uuid": "^3.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/invariant": "^2.2.33",
    "@types/javascript-time-ago": "^2.0.1",
    "@types/jest": "^26.0.8",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/lodash": "^4.14.157",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/node-cron": "^2.0.3",
    "@types/socket.io": "^2.1.11",
    "@types/spotify-web-api-node": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.0.1",
    "jest-watch-typeahead": "^0.6.0",
    "mockingoose": "2.13.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.48",
    "typescript": "^4.0.0"
  }
}
